{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "experimentalDecorators": true,
    // Skip type checking of all declaration files
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "./lib",
    "paths": {
      "app/*": ["/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
